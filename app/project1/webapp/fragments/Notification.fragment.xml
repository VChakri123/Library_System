<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idnotificationDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Notifications"
    >
        <customHeader>
            <Bar id="idbarnotify">
                <contentLeft>
                    <Text
                        id="idtextnotify"
                        text="Notifications"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        id="cancelbtn"
                        icon="sap-icon://sys-cancel"
                        press="onCloseNotificationDialog"
                        type="Reject"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <Table
            id="idUserLoans"
            alternateRowColors="true"
            backgroundDesign="Transparent"
            items="{loans}"
        >
            <columns>
                <Column id="idIsbnColumn">
                    <Title
                        id="idIsbntitle"
                        text="Notification about Issued books"
                    />
                </Column>
            </columns>

            <items>
                <ColumnListItem id="idColumnListBooksLoan">
                    <cells>
                        <Text
                            id="idBISBNvalue"
                            text="{notify}"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Dialog>
</core:FragmentDefinition>